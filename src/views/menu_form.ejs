<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/form_styles.css">
    <link rel="stylesheet" href="/css/calendar.css">
  </head>
  <body>
        <nav>
            <%- include('partials/nav'); %>
        </nav>
        <div class="bodyText">
            <h1>
                Menu Planner
            </h1>
            <p>
                Select a day to edit the calendar
            </p>    
        </div>
        <form name="menuForm" method="POST" action="/menu_planner">
            <table>
                <thead>
                    <tr>
                    <th></th>
                    <th>
                        <span class="day">1</span>
                        <span class="long">Monday</span>
                        <span class="short">Mon</span>
                    </th>
                    <th>
                        <span class="day">2</span>
                        <span class="long">Tuesday</span>
                        <span class="short">Tue</span>
                    </th>
                    <th>
                        <span class="day">3</span>
                        <span class="long">Wendsday</span>
                        <span class="short">We</span>
                    </th>
                    <th>
                        <span class="day">4</span>
                        <span class="long">Thursday</span>
                        <span class="short">Thur</span>
                    </th>
                    <th>
                        <span class="day">5</span>
                        <span class="long">Friday</span>
                        <span class="short">Fri</span>
                    </th>
                    <th>
                        <span class="day">6</span>
                        <span class="long">Saturday</span>
                        <span class="short">Sat</span>
                    </th>
                    <th>
                        <span class="day">7</span>
                        <span class="long">Sunday</span>
                        <span class="short">Sun</span>
                    </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <td class="hour" rowspan="1"><span>This Week</span></td>
                    <td><input type="text" name="mon1" value=""></td>
                    <td><input type="text" name="tue1" value=""></td>
                    <td><input type="text" name="wed1" value=""></td>
                    <td><input type="text" name="thu1" value=""></td>
                    <td><input type="text" name="fri1" value=""></td>
                    <td><input type="text" name="sat1" value=""></td>
                    <td><input type="text" name="sun1" value=""></td>
                    </tr>
                
                    <tr>
                    <td class="hour" rowspan="1"><span>Next Week</span></td>
                    <td><input type="text" name="mon2" value=""></td>
                    <td><input type="text" name="tue2" value=""></td>
                    <td><input type="text" name="wed2" value=""></td>
                    <td><input type="text" name="thu2" value=""></td>
                    <td><input type="text" name="fri2" value=""></td>
                    <td><input type="text" name="sat2" value=""></td>
                    <td><input type="text" name="sun2" value=""></td>
                    </tr>  
                </tbody>
            </table>
            <input type="submit" value="Submit" class="button">   
        </form>
    </body>
</html>