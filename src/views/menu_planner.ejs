<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head'); %>
    <link rel="stylesheet" href="/css/form_styles.css">
    <link rel="stylesheet" href="/css/calendar.css">
  </head>
  <body>
        <nav>
            <%- include('partials/nav'); %>
        </nav>
        <div class="bodyText">
            <h1>
                Menu Planner
            </h1>
            <p>
            </p>    
        </div>
        <form name="menuForm" method="POST" action="/menu_planner">
            <table>
                <thead>
                    <tr>
                    <th></th>
                    <th>
                        <span class="day">1</span>
                        <span class="long">Monday</span>
                        <span class="short">Mon</span>
                    </th>
                    <th>
                        <span class="day">2</span>
                        <span class="long">Tuesday</span>
                        <span class="short">Tue</span>
                    </th>
                    <th>
                        <span class="day">3</span>
                        <span class="long">Wednsday</span>
                        <span class="short">We</span>
                    </th>
                    <th>
                        <span class="day">4</span>
                        <span class="long">Thursday</span>
                        <span class="short">Thur</span>
                    </th>
                    <th>
                        <span class="day">5</span>
                        <span class="long">Friday</span>
                        <span class="short">Fri</span>
                    </th>
                    <th>
                        <span class="day">6</span>
                        <span class="long">Saturday</span>
                        <span class="short">Sat</span>
                    </th>
                    <th>
                        <span class="day">7</span>
                        <span class="long">Sunday</span>
                        <span class="short">Sun</span>
                    </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                    <td class="hour" rowspan="1"><span>This Week</span></td>
                    <td><input type="text" value="<%= menu[0].mon1 %>"></td>
                    <td><input type="text" value="<%= menu[0].tue1 %>"></td>
                    <td><input type="text" value="<%= menu[0].wed1 %>"></td>
                    <td><input type="text" value="<%= menu[0].thu1 %>"></td>
                    <td><input type="text" value="<%= menu[0].fri1 %>"></td>
                    <td><input type="text" value="<%= menu[0].sat1 %>"></td>
                    <td><input type="text" value="<%= menu[0].sun1 %>"></td>
                    </tr>
                
                    <tr>
                    <td class="hour" rowspan="1"><span>Next Week</span></td>
                    <td><input type="text" value="<%= menu[0].mon2 %>"></td>
                    <td><input type="text" value="<%= menu[0].tue2 %>"></td>
                    <td><input type="text" value="<%= menu[0].wed2 %>"></td>
                    <td><input type="text" value="<%= menu[0].thu2 %>"></td>
                    <td><input type="text" value="<%= menu[0].fri2 %>"></td>
                    <td><input type="text" value="<%= menu[0].sat2 %>"></td>
                    <td><input type="text" value="<%= menu[0].sun2 %>"></td>
                    </tr>  
                </tbody>
            </table>
            <input class="invisible" type="text" value="<%= menu[0]._id %>" name="id">
            <input type="submit" value="Submit" class="button">
        </form>
    </body>
</html>